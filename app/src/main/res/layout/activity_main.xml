<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_a_party_background_new"
    tools:context="com.example.sh_polak.fragmentstests.FragnentActivity">
    <LinearLayout
        android:id="@+id/btnsMenues"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="7.5"
        android:background="@drawable/menu_button2"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:tag="LocationParties"
            android:background="@drawable/placeholder"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="startMap"/>
        <TextView
            android:tag="MyFavorites"
            android:background="@drawable/menu_button2"
            android:layout_weight="1.5"
            android:text="Favorites"
            android:onClick="chooseFragments"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:tag="MainListActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="18sp"
            android:onClick="chooseFragments"
            android:text="main"
            android:gravity="center"
            android:textColor="#ffffff"/>

        <TextView
           android:tag="SearcParty"
            android:layout_width="0dp"
            android:text="search"
            android:onClick="chooseFragments"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/menu_button2"
            android:textColorHint="#ffffff" />

        <ImageView
            android:layout_width="0dp"
            android:tag="UserFragement"
            android:onClick="chooseFragments"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/avatar"
           />
    --></LinearLayout>
    <FrameLayout
        android:id="@+id/section"
        android:layout_below="@+id/btnsMenues"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>
